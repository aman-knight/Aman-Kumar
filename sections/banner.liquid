<!-- sections/banner.liquid -->
<section class="custom-banner">
  <div class="banner-inner">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-btn">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

<style>
  .custom-banner {
    padding: 60px 20px;
    text-align: center;
    background: #f9f9f9;
  }
  .banner-btn {
    background: #000;
    color: #fff;
    padding: 12px 24px;
    display: inline-block;
    transition: transform 0.3s ease;
  }
  .banner-btn:hover {
    transform: scale(1.05);
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Your Main Banner Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading",
      "default": "Some description goes here"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}
